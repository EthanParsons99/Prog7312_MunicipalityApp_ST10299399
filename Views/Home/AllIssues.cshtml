@model IEnumerable<Prog7312_MunicipalityApp_ST10299399.Models.Issue>

@{
    ViewData["Title"] = "All Reported Issues";
}

<h1 class="mb-4">All Reported Issues</h1>

<div class="row">
    @if (Model.Any())
    {
        foreach (var issue in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@issue.issueType</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Status: @issue.issueStatus</h6>
                        <p class="card-text">@issue.issueDescription</p>
                        <p class="card-text"><small class="text-muted">Reported on: @issue.issueDate.ToShortDateString()</small></p>
                    </div>
                 </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-info" role="alert">
                No issues have been reported yet.
            </div>
        </div>
    }
</div>



